<!DOCTYPE html>
<html>
  <head>
    <title>Calendar App</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">  <!-- bootstrap css-->
		<link rel="stylesheet" href="/stylesheets/main.css">
    <script src="https://code.jquery.com/jquery-3.2.1.js"
      integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
      crossorigin="anonymous"></script>

  </head>
  <body>
    <h1> Calendar App </h1>

    <div class="container">
      <div class="row">
        <h2 style="text-align: center">Add an event</h2>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/" method="POST">
                  <div class="form-group form-inline">
                    <label>Date</label>
                    <input class="form-control" value="" id="date" name="date" readonly>
                  </div>
                  <div class="form-group form-inline">
                      <label>Starts</label>
                      <input class="form-control" type="time" value="00:00" id="start-time" name="starttime">
                  </div>
                  <div class="form-group form-inline">
                      <label>Ends</label>
                      <input class="form-control" type="time" value="00:00" id="end-time" name="endtime">
                  </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="desc" placeholder="description">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/">Go Back</a>
            </div>
        </div>
    </div>

  	</div>

    <script>
      var pathname = $(location).attr('pathname');
      var id = pathname.substring(8);
      $("#date").val("2017-10-"+id);
      //alert("id is "+ id);
    </script>

    <script type="text/javascript" src="/javascripts/event.js"></script>
  </body>
</html>
